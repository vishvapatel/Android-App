<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/driver_bg"
    tools:context="com.example.vnspv.driverapp.DrieverActivity">

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_driver"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/Txtsize"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/Txt_marginTop"
        android:padding="@dimen/txt_padding"
         />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Button_text"
        android:background="@color/colorAccent"
        android:padding="@dimen/btn_padding"
        android:layout_margin="@dimen/btn_margin"
        android:textColor="@color/white"
        android:textSize="@dimen/button_txtsize"
        android:id="@+id/getlocationbtn"
        android:drawableLeft="@drawable/ic_action_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Txtsize"
        android:text="@string/click_on_the_button_to_get_your_location"
        android:textColor="@color/colorAccent"
        android:padding="@dimen/txt_padding"
        android:textAllCaps="false"
        />

</LinearLayout>
